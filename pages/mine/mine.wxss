/* pages/mine/mine.wxss */

.text_center{
  text-align: center;
}

.mine{
  padding: 1rem;
  font-size: 0.9rem;
  color: #333;
}

.logo image{
  display: block;
  width: 100px;
  height: 100px;
  margin:  10px auto;
  border-radius: 50%;
}

.name{
  display: block;
}

.block{
  display: flex;
  justify-content: center;
  align-items: center;
}

.block_item{
  width: 80px;
  height: 80px;
  background: #efefef;
  text-align: center;
  margin: 20px 10px;
  border-radius: 8px;
  color: #488dcf;
}

.block_item image{
  /* display: flex; */
  display: flex;
  flex: 1;
  width: 40px;
  height: 40px;
  margin: 10px auto 4px;
}